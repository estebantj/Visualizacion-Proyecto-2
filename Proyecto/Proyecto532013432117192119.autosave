Grafo grafo;
String nombreArchivo;

void setup() {
	size(800,600);
	grafo = new Grafo();
	nombreArchivo = "datos.txt";
	leerDatos();
}

void draw() {

}



void leerDatos() {
	// Se cargan los nodos
	String[] lines = loadStrings(nombreArchivo);
	//println("there are " + lines.length + " lines");
	String[] partes = lines[0].split(",");
	for (String caracter: partes) {
		grafo.nuevoNodo(caracter);
	}
	println(grafo.nodos);
}
